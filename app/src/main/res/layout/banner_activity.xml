<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sssss"
    android:background="@color/black"
    >


    <RelativeLayout
        android:id="@+id/main_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
>






            <RelativeLayout
                android:id="@+id/relativeLayout_banner_outer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
>





                <RelativeLayout
                android:id="@+id/relativeLayout_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@color/white">



                <TextView
                    android:id="@+id/textView23534"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="00"
                    android:textSize="14dp"/>


                <ImageView
                    android:id="@+id/photo_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/picture_default"
                    android:layout_below="@+id/textView23534"
                    android:scaleType="fitCenter"/>



                <TextView
                    android:id="@+id/textView67d57567"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:lineSpacingExtra="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_below="@+id/photo_view"
                    android:layout_marginTop="5dp"
                    />


            </RelativeLayout>



                <ImageView
                    android:id="@+id/cross"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/red_cross"

                    />


            </RelativeLayout>




        <ProgressBar
            android:id="@+id/progressBar1444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
            />


    </RelativeLayout>


</RelativeLayout>
