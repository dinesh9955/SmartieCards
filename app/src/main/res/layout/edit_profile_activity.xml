<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sssss"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl111"
        android:visibility="visible"

        >
        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl111">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/malecostume_64"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorPrimary"
                    android:layout_centerHorizontal="true"/>



                <Button
                    android:id="@+id/button6546324235"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/orange_selector"
                    android:text="Upload Picture"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/profile_image"/>


                <EditText
                    android:id="@+id/login_fname"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:drawableLeft="@drawable/username"
                    android:hint="First Name"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_below="@+id/button6546324235"
                    android:singleLine="true"
                    android:visibility="visible"

                    />



                <EditText
                    android:id="@+id/login_lname"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:drawableLeft="@drawable/username"
                    android:hint="Last Name"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_below="@+id/login_fname"
                    android:singleLine="true"

                    />




                <EditText
                    android:id="@+id/login_username"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:drawableLeft="@drawable/username"
                    android:hint="Username"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_below="@+id/login_lname"
                    android:singleLine="true"
                    />




                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:drawableLeft="@drawable/email"
                    android:hint="Email"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_below="@+id/login_username"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:focusable="false"
                    android:editable="false"
                    />


                <Button
                    android:id="@+id/button678789789"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/login_email"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:text="@string/login_dob"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center_vertical"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/dobicon"/>





                <EditText
                    android:id="@+id/login_address"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:hint="Address"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_below="@+id/button678789789"
                    android:gravity="left|top"
                    />





                <EditText
                    android:id="@+id/login_city"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/fade_green_border_corner_round"
                    android:hint="City"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_below="@+id/login_address"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    />




                <RelativeLayout
                    android:id="@+id/relativeLayout16"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/login_city"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    >


                    <ProgressBar
                        android:id="@+id/progressBar3657475"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"/>

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/shape_drop_down_normal_round"
                        android:textColor="#000000"
                        android:paddingLeft="0dp"
                        android:drawablePadding="10dp"
                        android:hint="Select"
                        android:textColorHint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="0dp"
                        android:popupBackground="@color/green_fade_hover_color"
                        android:id="@+id/spinner645657"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="fill_parent"
                        />

                </RelativeLayout>





                <Button
                    android:id="@+id/button6546"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/relativeLayout16"
                    android:background="@drawable/black_selector"
                    android:text="@string/login_update"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="true"/>


            </RelativeLayout>


        </ScrollView>



        <ProgressBar
            android:id="@+id/progressBar1444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
            />




    </RelativeLayout>


</RelativeLayout>
