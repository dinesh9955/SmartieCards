        <!--&lt;!&ndash; Custom Style Attribute&ndash;&gt;-->
        <!--<item name="textFieldStyle">@style/TextField</item>-->

    </style>



    <style name="menutextappearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">false</item>
        <item name="android:capitalize">none</item>

    </style>



    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.ActionBar">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>




    <style name="MaterialNavyTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionModeBackground">@color/candidate_recommended</item>
        <item name="android:textColorPrimary">@color/candidate_normal</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <!--<item name="android:windowButtonStyle">@style/windowButtonStyle</item>-->
        <item name="android:textColor">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>


    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>

    </style>




    <!-- Base application theme. -->
    <style name="AppThemeCheckBoxRegister" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@android:color/white</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@android:color/white</item> <!-- activated color change as you wish -->
        <item name="android:textColor">@android:color/white</item>
    </style>




    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">#000000</item>
        <item name="android:progressTint" tools:ignore="NewApi">#388e3c</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">#000000</item>
    </style>



</resources>
